@model IEnumerable<Models.Sale>

@{
    ViewData["Title"] = "Index";
}

<h1>Overview of all Sales</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Sale</a>
</p>

@if (Model.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.TransactionValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfSale)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Seller.FullName)
                </th>
                <th>
                    Action buttons
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionValue)
                    </td>
                    <td>
                        @{ string date = item.DateOfSale.ToShortDateString();}

                        @Html.DisplayFor(modelItem => date)
                    </td>
                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.FullName)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <br />
    <br />

    <p>Currently there are No records</p>
}