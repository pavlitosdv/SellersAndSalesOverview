@model Models.Sale

@{
    ViewData["Title"] = "Details";
}

<h1>Details of specific sale</h1>

<div>
    
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransactionValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfSale)
        </dt>
        <dd class="col-sm-10">
            @{ string date = Model.DateOfSale.ToShortDateString();}
            @Html.DisplayFor(model => date)
        </dd>
    
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seller.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seller.FullName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Update", "Update", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
