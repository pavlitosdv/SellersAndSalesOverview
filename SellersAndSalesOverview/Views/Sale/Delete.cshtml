@model Models.Sale

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Section</h1>

<h3>Are you sure you want to delete the following sale</h3>
<div>
     
    <hr />
    <dl class="row">
       
        <input type="hidden" asp-for="Id" />

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionValue)
        </dd>
        <dt class="col-sm-2">

            
            @Html.DisplayNameFor(model => model.DateOfSale)
        </dt>
        <dd class="col-sm-10">

            @{ string date = Model.DateOfSale.ToShortDateString();}

            @Html.DisplayFor(model => date)
        </dd>
     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seller.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seller.FullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
