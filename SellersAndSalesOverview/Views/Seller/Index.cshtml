@model IEnumerable<Models.Seller>

@{
    ViewData["Title"] = "Create Seller";
}

<h1>List of Sellers</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Seller</a>
</p>

@if (Model.Count() > 0)
{


    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                   Commissions
                </th>
                <th>
                    Action buttons
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @{ var total = item.Sales.Select(s => s.Commission).Sum().ToString("F2"); }

                        @Html.DisplayFor(modelItem => total)
                    </td>

                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <br />
    <br />

    <p>Currently there are No records</p>
}